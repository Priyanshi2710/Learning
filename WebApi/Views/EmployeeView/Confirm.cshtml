@model Domain.Models.Employee
@{

    ViewBag.Title = "Delete";

}
<style>
    .disabled {
        background-color: #dee2e6;
    }

    .card {
        height: fit-content;
        width: fit-content;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 4px;
        margin-left: 350px;
        margin-top: 70px;
    }

    .card-content {
        padding: 10px;
        background-color: cornsilk;
    }

    .card-title {
        font-size: 20px;
        margin: 0;
        text-align: center;
    }

    .card-description {
        margin-top: 10px;
    }

    .card-link {
        display: block;
        margin-top: 10px;
        color: #007bff;
        text-decoration: none;
    }

    .form-center {
        display: flex;
        justify-content: center;
    }

    .contentcustom {
        margin: 50px 50px 50px 100px;
    }

    .control-label {
        font-size: 18px;
        font-weight: bold;
    }

    .form-control {
        height: 28px;
        border: 1px solid #cdcdcd;
        border-color: rgba(0,0,0,.15);
        background-color: white;
        width: 526px;
        margin-right: -4px;
    }

    .btn {
        font-size: 20px;
        font-weight: bold;
        border-color: burlywood;
        width: max-content;
    }
</style>



<div class="card">
    <div class="card-content">
        <h2 class="card-title">Delete Confirmation</h2>
        @using (Html.BeginForm("Delete", "EmployeeView", new { id = ViewData["ID"] }, FormMethod.Post))
        {
            <div class="form-horizontal contentcustom">

                <div class="form-group">
                    @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">

                        @Html.TextBoxFor(model => model.Firstname, new { @class = "form-control disabled" , @readonly=true} )
                    </div>

                </div>

                <div class="form-group">

                    @Html.LabelFor(model => model.Lastname, htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">

                        @Html.TextBoxFor(model => model.Lastname, new { @class = "form-control disabled" , @readonly=true} )



                    </div>

                </div>
                <div class="form-group">

                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">

                        @Html.TextBoxFor(model => model.Email,  new { @class = "form-control disabled" , @readonly=true} )

                    </div>

                </div>
                <div class="form-group">

                    @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">

                        @Html.TextBoxFor(model => model.Gender,  new { @class = "form-control disabled" , @readonly=true} )

                    </div>

                </div>
                <h4>Are you sure you want to delete  ? </h4>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">

                        <input type="submit" id="btnDelete" value="Delete" class="btn btn-default form-control btn" />
                    </div>
                </div>
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>

        }
    </div>
</div>